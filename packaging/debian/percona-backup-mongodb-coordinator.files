#!/bin/sh
SOURCE_DIR=$1
BUILD_ROOT=$2
cd $SOURCE_DIR

install -m 0640 -d $BUILD_ROOT/usr/bin
install -m 0640 -d $BUILD_ROOT/lib/systemd/system
install -m 0640 -d $BUILD_ROOT/etc
install -m 0640 etc/pbm-coordinator.conf $BUILD_ROOT/etc
install -m 0640 bin/pbm-coordinator $BUILD_ROOT/usr/bin
install -m 0640 lib/systemd/system/pbm-coordinator.service $BUILD_ROOT/lib/systemd/system
